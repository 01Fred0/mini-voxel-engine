{
  "name": "mini-voxel-engine",
  "version": "0.1.0",
  "description": "A simplified Minecraft-like voxel engine with procedural terrain generation",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win"
  },
  "dependencies": {
    "three": "^0.158.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "keywords": [
    "voxel",
    "minecraft",
    "procedural-generation",
    "perlin-noise",
    "terrain-generation",
    "three.js"
  ],
  "author": "01Fred0",
  "license": "MIT",
  "build": {
    "appId": "com.mini-voxel-engine",
    "productName": "Mini Voxel Engine",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}
